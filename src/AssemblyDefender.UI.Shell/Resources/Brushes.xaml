<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<SolidColorBrush x:Key="ShellBackground" Color="#E6E6E6" />
	<LinearGradientBrush x:Key="MenuBackground"
                         StartPoint="0,0"
                         EndPoint="0,1">
		<LinearGradientBrush.GradientStops>
			<GradientStop Color="#F1F1F1" Offset="0.20"/>
			<GradientStop Color="#E1E1E1" Offset="0.40"/>
			<GradientStop Color="#D2D2D2" Offset="1"/>
		</LinearGradientBrush.GradientStops>
	</LinearGradientBrush>
	<SolidColorBrush x:Key="ToolBarBackground" Color="#E6E6E6" />
	<SolidColorBrush x:Key="StatusBarBackground" Color="#D2D2D2" />
	<SolidColorBrush x:Key="BorderColor" Color="#808080" />
	<SolidColorBrush x:Key="BorderLightColor" Color="#d2d2d2" />
	<SolidColorBrush x:Key="LinkColor" Color="#0033c4" />


</ResourceDictionary>